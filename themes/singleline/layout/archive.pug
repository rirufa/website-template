extend _page_base

block custom_header
	include _header
	#main_titile
		- if(is_archive())
			h1 #{res.index.oldarchives_title}
		- else if(is_category())
			h1 #{res.index.oldarchives_title_by_category}:#{page.category}
		- else if(is_tag())
			h1 #{res.index.oldarchives_title_by_tag}:#{page.tag}
		- else if(page != undefined)
			h1 #{page.title}
	nav#bread

block content
	#infomation
		each item in page.posts.toArray()
			#summary
				a(href=`${url_for(item.path)}`) #{item.title}
		ul
			- if(page.prev)
				li a(href=`/${page.prev_link}`) Prev
			- if(page.prev)
				li a(href=`/${page.nex_link}`) Next

block custom_footer
	include _footer
